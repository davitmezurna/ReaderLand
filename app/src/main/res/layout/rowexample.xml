<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_margin="5dp"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#A3C4D6"
    android:layout_marginBottom="15dp"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/district"
            android:gravity="center"
            android:background="@drawable/productbackground"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="სოლოლაკი"/>
        <TextView
            android:id="@+id/address"
            android:gravity="center"
            android:background="@drawable/productbackground"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="თუმანიანის 5"/>
        <TextView
            android:id="@+id/date"
            android:gravity="center"
            android:textColor="@color/black"
            android:background="@drawable/productbackground"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="12/5/23"/>
        <TextView
            android:id="@+id/phone"
            android:gravity="center"
            android:textColor="@color/black"
            android:layout_weight="1"
            android:textStyle="bold"
            android:background="@drawable/productbackground"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="150"/>
    </androidx.appcompat.widget.LinearLayoutCompat>
    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="match_parent"
        android:gravity="center|top"
        android:id="@+id/product"
        android:layout_height="match_parent"
        android:background="@drawable/productbackground"
        android:layout_weight="1"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:text="asdasdasdasdasd"/>
    </LinearLayout>
    <TextView
        android:id="@+id/restriction"
        android:textColor="@color/black"
        android:layout_width="match_parent"
        android:background="@drawable/productbackground"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="სპეციალური შეზღუდვა"/>
</LinearLayout>